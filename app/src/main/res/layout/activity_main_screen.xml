<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:ads="http://schemas.android.com/apk/res-auto"
             android:id="@+id/frameLayout_main"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/trump_image"
             android:orientation="vertical">


    <ImageView
        android:id="@+id/imgv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>


    <ImageView
        android:id="@+id/imgv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <TextView
                android:id="@+id/txtv_punch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:paddingRight="15dp"
                android:background="@drawable/ic_punch_text_rightt"
                android:text="0"
                android:theme="@style/Text_Heading_Small"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtv_coin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="0"
                android:background="@drawable/ic_coins_text_left"
                android:theme="@style/Text_Heading_Small"/>

        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@mipmap/ic_half_round"/>

    <ImageView
        android:id="@+id/imgv_round_punch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_round_punch"
        android:padding="15dp"
        android:layout_gravity="bottom|right"/>

    <ImageView
        android:id="@+id/imgv_round_hillary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_hillary_round"
        android:padding="10dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="bottom|right"/>

    <ImageView
        android:id="@+id/imgv_round_wall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_round_plus"
        android:padding="10dp"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="bottom|right"/>


    <ImageView
        android:id="@+id/imgv_round_baseball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_round_baseball"
        android:padding="8dp"
        android:layout_marginRight="70dp"
        android:layout_gravity="bottom|right"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:src="@mipmap/ic_punch_donald_trump"/>


</FrameLayout>