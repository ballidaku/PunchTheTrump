<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Text_Heading" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/heading</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text_Heading_Medium" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/heading_medium</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text_Heading_Small" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/heading_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Heading_Very_Small" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/heading_very_small</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="Text_Heading_Very_Small_Yellow" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorGold</item>
        <item name="android:textSize">@dimen/heading_very_small</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
